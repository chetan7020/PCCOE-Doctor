<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".features.patients.CreateReportActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--desc-->
                <EditText
                    android:id="@+id/etDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/editext_drawable"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="Name"
                    android:padding="16dp" />

                <!--symptoms-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center">

                        <EditText
                            android:id="@+id/etSymptoms"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:background="@drawable/editext_drawable"
                            android:fontFamily="@font/poppins_medium"
                            android:hint="Symptoms"
                            android:padding="16dp" />

                        <ImageView
                            android:id="@+id/ivAddSymptom"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/baseline_add_circle_24" />

                    </LinearLayout>

                    <GridLayout
                        android:id="@+id/glSymptoms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:columnCount="2" />

                </LinearLayout>

                <!--medicines-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center">

                        <EditText
                            android:id="@+id/etMedicines"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:background="@drawable/editext_drawable"
                            android:fontFamily="@font/poppins_medium"
                            android:hint="Medicines"
                            android:padding="16dp" />

                        <ImageView
                            android:id="@+id/ivAddMedicine"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/baseline_add_circle_24" />

                    </LinearLayout>

                    <GridLayout
                        android:id="@+id/glMedicines"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:columnCount="2" />

                </LinearLayout>

                <!--measures-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center">

                        <EditText
                            android:id="@+id/etMeasures"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:background="@drawable/editext_drawable"
                            android:fontFamily="@font/poppins_medium"
                            android:hint="Measures"
                            android:padding="16dp" />

                        <ImageView
                            android:id="@+id/ivAddMeasure"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/baseline_add_circle_24" />

                    </LinearLayout>

                    <GridLayout
                        android:id="@+id/glMeasures"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:columnCount="2" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnAddReport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/button_drawable"
                    android:fontFamily="@font/poppins_semibold"
                    android:padding="15dp"
                    android:text="Add Report"
                    android:textColor="@color/white"
                    android:textSize="17dp" />


            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/white_rect"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPatientID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="patient@gmail.com"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvPatientEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="patient@gmail.com"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvDoctorEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test123@gmail.com"
                android:visibility="gone" />

            <!--name-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Name : "
                    android:textColor="@color/blue" />

                <TextView
                    android:id="@+id/tvPatientName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Patient 1"
                    android:textColor="@color/light_blue" />

            </LinearLayout>

            <!--age-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Age : "
                    android:textColor="@color/blue" />

                <TextView
                    android:id="@+id/tvPatientAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22" />

            </LinearLayout>

            <!--gender-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Gender : "
                    android:textColor="@color/blue" />

                <TextView
                    android:id="@+id/tvPatientGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male" />

            </LinearLayout>

            <!--blood group-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Blood Group : "
                    android:textColor="@color/blue" />

                <TextView
                    android:id="@+id/tvPatientBloodGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="O+" />

            </LinearLayout>

            <Button
                android:id="@+id/btnAddReport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext"
                android:backgroundTint="@null"
                android:fontFamily="@font/poppins_semibold"
                android:padding="10dp"
                android:text="Add Report"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:textSize="17dp" />


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>